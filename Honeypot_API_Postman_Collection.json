        "url": {
          "raw": "{{base_url}}/api/honeypot/message",
          "host": ["{{base_url}}"],
          "path": ["api", "honeypot", "message"]
        }
      }
    },
    {
      "name": "Missing Auth Header",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"agent\": \"endpoint-checker\",\n  \"payload\": \"test\"\n}"

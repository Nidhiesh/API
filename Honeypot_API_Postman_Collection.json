{
  "info": {
    "_postman_id": "honeypot-api-collection",
    "name": "Scam Message Honeypot API",
    "description": "Complete test collection for Honeypot API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "default"
    },
    {
      "key": "api_key",
      "value": "TEST_API_KEY",
      "type": "default"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/honeypot/health",
          "host": ["{{base_url}}"],
          "path": ["api", "honeypot", "health"]
        }
      }
    },
    {
      "name": "Valid Message - Low Score",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{api_key}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"agent\": \"endpoint-checker\",\n  \"payload\": \"Hello, can you help me with my account?\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/honeypot/message",
          "host": ["{{base_url}}"],
          "path": ["api", "honeypot", "message"]
        }
      }
    },
    {
      "name": "High Scam Score - Multiple Indicators",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{api_key}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"agent\": \"endpoint-checker\",\n  \"payload\": \"URGENT! Your bank account has been compromised. Please verify your identity immediately by providing your OTP. Click here: http://fakebank.com to confirm your transaction.\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/honeypot/message",
          "host": ["{{base_url}}"],
          "path": ["api", "honeypot", "message"]
        }
      }
    },
    {
      "name": "OTP Request Detection",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{api_key}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"agent\": \"endpoint-checker\",\n  \"payload\": \"Your OTP is 4592 verify now\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/honeypot/message",
          "host": ["{{base_url}}"],
          "path": ["api", "honeypot", "message"]
        }
      }
    },
    {
      "name": "Financial Keywords Detection",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{api_key}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"agent\": \"endpoint-checker\",\n  \"payload\": \"Please provide your credit card and debit card information for the transaction\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/honeypot/message",
          "host": ["{{base_url}}"],
          "path": ["api", "honeypot", "message"]
        }
      }
    },
    {
      "name": "Urgency Keywords Detection",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{api_key}}"
          },
          {
            "key": "Content-Type",

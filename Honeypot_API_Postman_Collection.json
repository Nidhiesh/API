    },
    {
      "name": "Get All Logs",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/honeypot/logs",
          "host": ["{{base_url}}"],
          "path": ["api", "honeypot", "logs"]
        }
      }
    },
    {
      "name": "Filter Logs by IP",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/honeypot/logs?ip=127.0.0.1",
          "host": ["{{base_url}}"],
          "path": ["api", "honeypot", "logs"],
          "query": [
            {
              "key": "ip",
              "value": "127.0.0.1"
            }
          ]
        }
      }
    },
    {
      "name": "Unknown Endpoint",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{api_key}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/honeypot/unknown",
          "host": ["{{base_url}}"],
          "path": ["api", "honeypot", "unknown"]
        }
      }
    }
  ]
}
